{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    ".turbo",
    ".vercel",
    "out",
    "*.tsbuildinfo"
  ]
}
