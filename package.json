{
  "name": "kodo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "env:pull": "turbo env:pull",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint:check": "biome lint .",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "ai:dev": "turbo run dev --filter=@kodo/ai",
    "ai:build": "turbo run build --filter=@kodo/ai",
    "support:dev": "turbo run dev --filter=@kodo/support",
    "support:build": "turbo run build --filter=@kodo/support",
    "portfolio:dev": "turbo run dev --filter=@kodo/portfolio",
    "portfolio:build": "turbo run build --filter=@kodo/portfolio",
    "finance:dev": "turbo run dev --filter=@kodo/finance",
    "finance:build": "turbo run build --filter=@kodo/finance",
    "ui:build": "turbo run build --filter=@kodo/ui",
    "ui:dev": "turbo run dev --filter=@kodo/ui",
    "services:build": "turbo run build --filter=@kodo/services",
    "services:dev": "turbo run dev --filter=@kodo/services",
    "email:dev": "pnpm --filter @kodo/services email:dev",
    "packages:build": "turbo run build --filter=@kodo/ui --filter=@kodo/services --filter=@kodo/db",
    "packages:dev": "turbo run dev --filter=@kodo/ui --filter=@kodo/services --filter=@kodo/db",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "depcheck": "^1.4.7",
    "husky": "^9.1.7",
    "turbo": "^2.6.1",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.18.0"
}
