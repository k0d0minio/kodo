{
  "name": "@kodo/services",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./email": {
      "import": "./dist/email/index.js",
      "types": "./dist/email/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "email:dev": "pnpm exec email dev --dir=src/email/templates --port=3010",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@react-email/components": "^1.0.1",
    "@react-email/render": "^2.0.0",
    "react": "catalog:",
    "resend": "^6.2.2"
  },
  "devDependencies": {
    "@react-email/preview-server": "5.0.5",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "react-dom": "catalog:",
    "react-email": "^5.0.5",
    "tsup": "^8.0.0",
    "typescript": "catalog:"
  }
}
